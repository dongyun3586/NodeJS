<%- include ./parts/head %>
<body>
    <%- include ./parts/header %>
    <div>
        <form action="/book/search" method="post">
            <fieldset>
                <legend>도서 검색</legend>
                <label for="bookname">도서명</label>
                <input type="text" name="bookname" id="bookname">
                <select name="bookname">
                    <option value="and">AND</option>
                    <option value="or">OR</option>
                </select><br>
                <label for="author">저   자</label>
                <input type="text" name="author" id="author">
                <select name="author">
                    <option value="and">AND</option>
                    <option value="or">OR</option>
                </select><br>
                <label for="publisher">출판사</label>
                <input type="text" name="publisher" id="publisher"><br>
                <input type="submit" value="검색하기"><input type="reset">
            </fieldset>
        </form>
    </div>

    <!-- booklist -->
    <table>
        <tr><th>도서번호</th><th>도서명</th><th>저자</th><th>출판사</th><th>상태</th></tr>
        <% booklist.forEach((element, index) => { %>
            <tr>
                <td><%=element.book_code%></td>
                <td><%=element.book_name%></td>
                <td><%=element.author%></td>
                <td><%=element.publisher%></td>
                <td>
                    <% if(element.rent_allow == 0){ %>
                        <a href="/book/rent/<%=element.book_code%>">대출가능</a>
                    <% }else{ %>
                        대출중
                    <% } %>
                </td>
            </tr>
        <% }); %>
    </table>
    <%- include ./parts/footer %>